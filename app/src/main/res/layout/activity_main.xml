<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <!-- 1. Custom Toolbar-->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Wi-Fi Status Indicator -->
        <TextView
            android:id="@+id/tv_wifi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Wi-Fi is Off"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_wifi_off"
            tools:drawableStart="@drawable/ic_wifi_off"
            android:background="@drawable/rounded_border_orange_bg"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <!-- Spacer to push items to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- PRO Badge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRO"
            android:textColor="@color/proBadgeColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/rounded_badge_bg"/>

        <!-- Share and Settings Icons -->
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/textColorPrimary"
            android:src="@drawable/ic_share"
            android:contentDescription="Share App"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/textColorPrimary"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"/>

    </LinearLayout>

    <!-- 2. Main Connection Options (Connect & Browser Mirroring) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <!-- Connect Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_connect"
        style="@style/Widget.MirrorApp.LargeActionCard"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_50"
        android:layout_marginTop="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <!-- Placeholder for Connect Icon -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_cast"
                android:tint="@color/colorPrimary"
                android:background="@drawable/circle_orange_bg"
                android:padding="12dp"
                android:contentDescription="Connect to TV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Browser Mirroring Card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_browser_mirroring"
        style="@style/Widget.MirrorApp.LargeActionCard"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/card_connect"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_50"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <!-- Placeholder for Browser Icon -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_web"
                android:tint="@color/colorAccent"
                android:background="@drawable/circle_teal_bg"
                android:padding="12dp"
                android:contentDescription="Browser Mirroring"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browser Mirroring"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 3. Utility Cards (Tutorial & Floating Tools) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_tutorial"
        style="@style/Widget.MirrorApp.SmallUtilityCard"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_50">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Tutorial &amp; FAQ"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_help"
            android:drawablePadding="16dp"
            android:textColor="@color/textColorPrimary"
            tools:ignore="RtlSymmetry" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_floating_tools"
        style="@style/Widget.MirrorApp.SmallUtilityCard"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_browser_mirroring"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_50"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Floating tools"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/colorPrimary"
                android:trackTint="@color/textColorSecondary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 4. Ad/Promotional Card (Bottom Section) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_ad"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FF3A3F47"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_floating_tools">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="[Placeholder: Large Native Ad Unit Here]"
            android:textColor="@color/textColorSecondary"
            android:textSize="18sp"
            android:textStyle="italic" />
    </androidx.cardview.widget.CardView>

    <!-- 5. Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorSurface"
        android:elevation="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:tint="@color/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_file"
            android:tint="@color/textColorSecondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Local Files"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_more"
            android:tint="@color/textColorSecondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="More Options"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>